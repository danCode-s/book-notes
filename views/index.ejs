<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Notes</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<section class="header">
    <nav>
        <h1>Book Notes</h1>
    </nav>

</section>
<body>
    <section class="functional-btns">
        <form action="/user-act" method="post">
            <input type="submit" class="add" name="add-btn" value="Add a Book">
            <div class="sort">
                <h3>Sort by:</h3>
                <input type="submit" class="rating sort" value="Rating">
                <input type="submit" class="time sort" value="Time">
            </div>
            
        </form>
    </section>

    <section class="books">
        <hr>
        <div class="container">
            <% if (locals.books){%>
                <% books.forEach(book => {%>
                    <div class="card">
                        <img src="<%=book.img_url%>" alt="">
                        <div class="data">
                            <h1><%= book.name%></h1>
                            <p><%=book.author%></p>
                        </div>
                        <h3>Rating: <%=book.rating%></h3>
                    </div>
                <%}); %>    
            <%}else{%>
                <h1>Please add a book!</h1>
            <%}%>
        </div>
    </section>

</body>
</html>